{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@config/*": [
        "app/config/*"
      ],
      "@services/*": [
        "app/services/*"
      ]
    },
    "types": [
      "react-native",
      "jest",
      "@types/react-native-vector-icons",
      "@react-native-community/netinfo"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
